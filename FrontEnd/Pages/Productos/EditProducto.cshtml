@page
@model FrontEnd.Pages.EditProductoModel
@{
}
<h1> Editar Producto </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden asp-for="Producto.Id" />
            <div class="form-group">
                <label asp-for="Producto.Nombre" class="control-label"> Nombre Producto </label>
                <input asp-for="Producto.Nombre" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Cantidad" class="control-label"> Cantidad </label>
                <input asp-for="Producto.Cantidad" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Descripcion" class="control-label"> Descripcion </label>
                <input asp-for="Producto.Descripcion" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Descuento" class="control-label"> Descuento </label>
                <input asp-for="Producto.Descuento" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="Producto.PrecioFinal" class="control-label"> Precio Final </label>
                <input asp-for="Producto.PrecioFinal" class="form-control" required>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-success"> Guardar </button>
                <a asp-page="./Productos" class="btn btn-primary"> Cancelar </a>
            </div>
        </form>
    </div>
</div>
