@page
@model FrontEnd.Pages.addProductosModel
@{
}
<h1> Agregar Producto </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden asp-for="productoNuevo.Id" />
            <div class="form-group">
                <label asp-for="productoNuevo.Nombre" class="control-label"> Nombre Producto </label>
                <input asp-for="productoNuevo.Nombre" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="productoNuevo.Cantidad" class="control-label"> Cantidad </label>
                <input asp-for="productoNuevo.Cantidad" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="productoNuevo.Descripcion" class="control-label"> Descripcion </label>
                <input asp-for="productoNuevo.Descripcion" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="productoNuevo.Descuento" class="control-label"> Descuento </label>
                <input asp-for="productoNuevo.Descuento" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="productoNuevo.PrecioFinal" class="control-label"> PrecioFinal </label>
                <input asp-for="productoNuevo.PrecioFinal" class="form-control" value="" required>
            <br/>
            <div class="form-group">
                <button type="submit" class="btn btn-success"> Guardar </button>
                <a asp-page="./Productos" class="btn btn-primary"> Cancelar </a>
            </div>
        </form>
    </div>
</div>