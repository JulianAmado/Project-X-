@page
@model MyApp.Namespace.EditClienteModel
@{
}
<h1> Editar Cliente </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden asp-for="cliente.Id" />
            <div class="form-group">
                <label asp-for="cliente.Nombre" class="control-label"> Nombre Completo </label>
                <input asp-for="cliente.Nombre" class="form-control"  required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.Edad" class="control-label"> Edad </label>
                <input asp-for="cliente.Edad" class="form-control"  required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.Documento" class="control-label"> Documento de Identidad </label>
                <input asp-for="cliente.Documento" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.Telefono" class="control-label"> Telefono de contacto </label>
                <input asp-for="cliente.Telefono" class="form-control"   required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.CorreoElectronico" class="control-label"> Correo Electrónico </label>
                <input asp-for="cliente.CorreoElectronico" class="form-control"  required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.Direccion" class="control-label"> Dirección </label>
                <input asp-for="cliente.Direccion" class="form-control"  required>
            </div>
            <div class="form-group">
                <label asp-for="cliente.Forma_pago" class="control-label"> Forma de Pago </label>
                <input asp-for="cliente.Forma_pago" class="form-control"  required>
            </div>            
            <br/>
            <div class="form-group">
                <button type="submit" class="btn btn-success"> Guardar </button>
                <a asp-page="./ListClientes" class="btn btn-primary"> Cancelar </a>
            </div>
        </form>
    </div>

</div>