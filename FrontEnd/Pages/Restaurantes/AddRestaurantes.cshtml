@page
@model FrontEnd.Pages.AddRestaurantesModel
@{
}
<h1> Agregar Restaurante </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input hidden asp-for="RestauranteNuevo.Id" />
            <div class="form-group">
                <label asp-for="RestauranteNuevo.Nombre" class="control-label"> Nombre Restaurante </label>
                <input asp-for="RestauranteNuevo.Nombre" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.NIT" class="control-label"> NIT </label>
                <input asp-for="RestauranteNuevo.NIT" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.Razon_Social" class="control-label"> Razón Social </label>
                <input asp-for="RestauranteNuevo.Razon_Social" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.Calificacion" class="control-label"> Calificación </label>
                <input asp-for="RestauranteNuevo.Calificacion" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.UbicacionEmpresa" class="control-label"> Ubicación/Dirección </label>
                <input asp-for="RestauranteNuevo.UbicacionEmpresa" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.TelefonoEmpresa" class="control-label"> Teléfono Restaurante </label>
                <input asp-for="RestauranteNuevo.TelefonoEmpresa" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.CorreoEmpresa" class="control-label"> Correo Eléctronico </label>
                <input asp-for="RestauranteNuevo.CorreoEmpresa" class="form-control" value="" required>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteNuevo.Menu" class="control-label"> Menu del Restaurante </label>
                <input asp-for="RestauranteNuevo.Menu" class="form-control" value="" required>
            </div>
            <br/>
            <div class="form-group">
                <button type="submit" class="btn btn-success"> Guardar </button>
                <a asp-page="./ListRestaurantes" class="btn btn-primary"> Cancelar </a>
            </div>
        </form>
    </div>
</div>
